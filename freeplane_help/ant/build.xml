<project name="freeplane_help" default="dist" basedir="..">
	<property name="ver" value="0.9.0:21" />
	<property name="src" value="src" />
	<property name="resources" value="resources" />
	<property name = "root" value = "."/>
	<property name="osgimanifest" value="${root}/META-INF/MANIFEST.MF" />	
	<property name="lib" value="${root}/lib" />
	<property name="framework.jar" value="${root}/../freeplane/lib/knopflerfish/framework.jar" />
	<property name="freeplane.dist.lib" value="${root}/../freeplane/bin/dist/lib" />
	<property name="freeplane.jars" value="${freeplane.dist.lib}/freeplaneviewer.jar:${freeplane.dist.lib}/freeplaneeditor.jar:${freeplane.dist.lib}/commons-lang-2.0.jar:${freeplane.dist.lib}/forms-1.0.5.jar:${freeplane.dist.lib}/SimplyHTML/SimplyHTML.jar" />
	<property name="src_base_for_post" value="${root}/../" />
	<property name="build" value="${root}/build" />
	<property name="dist" value="${root}/bin/dist" />
	<property name="dist.lib" value="${dist}/lib" />
	<property name="dist.osgi" value="${dist}/osgi" />
	<property name="freeplaneplugin.jar" value="${dist.osgi}/org.freeplane.plugin.help.jar"/>
	<property name="debug" value="on" />
	<property name="java_source_version" value="1.5" />
	<property name="java_target_version" value="1.5" />
	<property name="build.compiler" value="modern" />
	<property name="classpath" value="${framework.jar}:${freeplane.jars}:${lib}/jhall.jar"/>

	<target name="build">
		<echo>Freeplane Version = ${ver}.</echo>
		<delete dir="${build}"  quiet="true"/>
		<mkdir dir="${build}" />
		<javac srcdir="${src}" destdir="${build}" classpath="${classpath}" debug="${debug}" 
			source="${java_source_version}" target="${java_target_version}">
		</javac>
	</target>


	<target name="dist" depends="build">
		<!-- third party libs -->
		<mkdir dir="${dist.osgi}" />
		<jar jarfile="${freeplaneplugin.jar}"
			 manifest="${osgimanifest}">
			<fileset dir="${build}">
			</fileset>
			<fileset dir="${root}">
				<include name="lib/**"/>
			</fileset>
			<fileset dir="${resources}"/>
		</jar>
		<delete dir="${build}"  quiet="true"/>
	</target>

	<target name="clean">
		<delete dir="${build}"  quiet="true"/>
		<delete dir="${dist}"  quiet="true"/>
		<delete dir="${post}"  quiet="true"/>
		<delete>
			<fileset defaultexcludes="no" dir="${src}" includes="**/*~"/>
		</delete>
	</target>
	
</project>

