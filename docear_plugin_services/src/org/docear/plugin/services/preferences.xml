<?xml version="1.0" encoding="UTF-8"?>
<preferences_structure>
	<tabbed_pane>
		<tab name="online_services">
		    <separator name="account_options">		    			
				<action name="docear.allow.upload.action" />
			</separator>
			<separator name="docear.update_checker">
			    <combo name="docear.update_checker.options">
			        <choice value="docear.update_checker.major" />
					<choice value="docear.update_checker.middle" />
					<choice value="docear.update_checker.minor" />
					<choice value="docear.update_checker.beta" />
					<choice value="docear.update_checker.all" />
					<choice value="docear.update_checker.disable" />
			    </combo>
			    <action name="docear.update_checker.show" />
			</separator>
			<separator name="docear.proxy_settings">
			     <boolean name = "docear.use_proxy"/>			     
			     <string name="docear.proxy_host"/>
			     <string name="docear.proxy_port"/>
			</separator>
		</tab>			
	</tabbed_pane>
</preferences_structure>